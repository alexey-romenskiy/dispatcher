<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{ISO8601,UTC}] %-5p {%X} %m \(%F:%L\)%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CON"/>
    </root>
</configuration>
